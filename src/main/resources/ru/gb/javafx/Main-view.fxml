<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.gb.javafx.ChatController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>


    <TextArea fx:id="ChatHistory" editable="false" VBox.vgrow="ALWAYS" />
    <HBox alignment="CENTER" spacing="40">
        <TextField fx:id="chatEnter" HBox.hgrow="ALWAYS" />
        <Button alignment="CENTER_RIGHT" defaultButton="true" onAction="#userChatClick" text="Send" />
    </HBox>
</VBox>
